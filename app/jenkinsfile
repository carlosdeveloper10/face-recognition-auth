pipeline {
    agent {
        label 'docker-agent'
    }
    
    environment {
        CI_TOOLS = '/home/jenkins/ci-tools'
    }
    
	stages {
	    
	    stage('Unit test') {
		    steps {
		        dir("app"){
		        
	    	   		sh 'mvn test'
	    	   		junit 'target/surefire-reports/TEST-*xml'
	   	    	}
		    }
    	}
    	
		stage('SonarQube analysis') {
			steps {
				dir("app"){
					withSonarQubeEnv('sonarQubeServer') {
							//sh '${scannerHome}/bin/sonar-scanner'
						sh '${CI_TOOLS}/sonar-scanner/sonar-scanner-3.3.0.1492-linux/bin/sonar-scanner'
					}
					timeout(time: 1, unit: 'HOURS') {
		            	waitForQualityGate abortPipeline: true
		            }
				 }
			 }
		}
		
		stage('Package artifact') {
		   steps {
   		   	  dir("app"){
   		   	      sh 'mvn package -DskipTests=true'
   		   	  }
   		   }
		}

		
		stage('RESTful integration test'){
			
			stages{
			    stage('Cloud configuration') {
			    	steps{
				        dir("app"){
							sh 'echo Creating and configuring Heroku for IT'
							sh 'heroku create heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set port=8080 -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set dburl=jdbc:postgresql://ec2-174-129-224-157.compute-1.amazonaws.com:5432/dbd47u60jcgd3o -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set dbusername=suinkegzkmwilh -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set dbpassword=bd78e8b0150ba0c00146cff94fca57e5cbf0799149c42322110237aec363cbcb -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set AWS_ACCES_KEY_ID=AKIAI6GVQNSBQ2UILIXQ -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set AWS_REGION=us-east-1 -a heroku-fra-it-${BUILD_NUMBER}'
							sh 'heroku config:set AWS_SECRET_ACCES_KEY=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 -a heroku-fra-it-${BUILD_NUMBER}'
							//sh 'mvn spring-boot:run -Dspring-boot.run.arguments=--port=8085,--dburl=jdbc:postgresql://ec2-174-129-224-157.compute-1.amazonaws.com:5432/dbd47u60jcgd3o,--dbusername=suinkegzkmwilh,--dbpassword=bd78e8b0150ba0c00146cff94fca57e5cbf0799149c42322110237aec363cbcb'	    
						}
				    }   
    			}
    			stage('Deploy on heroku') {
			       steps{
				        dir("app"){
							sh 'heroku deploy:jar target/face-recognition-*.jar -a heroku-fra-it-${BUILD_NUMBER}'
						}
				    } 
			    }
			    stage('Run integartion test') {
			       steps{
				        dir("test/fra-restful-test"){
				    		sh 'mvn test -Dserver.host=https://heroku-fra-it-${BUILD_NUMBER}.herokuapp.com'
						}
				    } 
			    }
			}
			
			post {
				always {
	    			//sh 'heroku apps:destroy heroku-fra-it-${BUILD_NUMBER} --confirm heroku-fra-it-${BUILD_NUMBER}'
	    			sh 'heroku pg:backups:restore --app heroku-fra-it-${BUILD_NUMBER} --confirm heroku-fra-it-${BUILD_NUMBER}'
	    		}
			}
		}



		stage('Deploy on stage'){
			parallel {
			    stage('Deploy on Dev') {
                   when {
                       branch 'develop'
                   }
					steps{
						sh 'mvn package' 
					    sh 'eb deploy FaceRecognitionAuthDev-env'
					}
                }
                
                stage('Deploy on Qa') {
                   when {
                       branch 'release/*'
                   }
					steps{
						sh 'mvn package' 
						sh 'eb deploy FaceRecognitionAuthDev-qa'
					}
                }
                
                stage('Deploy on Pro') {
                   when {
                       branch 'master'
                   }
				   steps{
				   		sh 'mvn package' 
					    sh 'eb deploy FaceRecognitionAuthDev-pro'
				   }
                }
			}
		}	
	}
}//Pipeline end

